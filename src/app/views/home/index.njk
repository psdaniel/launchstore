{% extends "layout.njk" %}

{% block content %}
<section class="shop container">
    <h2>Ãšltimos Produtos</h2>

    <div class="items">

        {% for product in products %}
            <div class="product">
                <div 
                    class="image"
                    style="background: url({{product.img if product.img else '//placehold.it/500x500?text=Produto sem imagem'}})"
                >
                </div>

                {% if product.oldPrice != product.price%}
                <div class="old-price">{{product.oldPrice}}</div>
                {%endif%}
                <p>{{product.price}}</p>
                <h4>{{product.name}}</h4>

                <a href="/products/{{product.id}}" class="button">Ver Produto</a>

            </div>
        {% endfor %}
    </div>
</section>

{% endblock content %}